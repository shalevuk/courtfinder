<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:background="@android:color/white"> <!-- רקע לבן -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"> <!-- רקע לבן -->

        <TextView
            android:id="@+id/court_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="migrash hamelchim"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/court_city_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="givataim"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"> <!-- רקע לבן -->

        <TextView
            android:id="@+id/court_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:text="Ukashi@gmail.com"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"> <!-- רקע לבן -->

        <ImageButton
            android:id="@+id/court_phone_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="180dp"
            android:background="@drawable/circle"
            android:src="@drawable/baseline_phone_24" />

        <ImageButton
            android:id="@+id/court_maps_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:background="@drawable/circle"
            android:src="@drawable/baseline_map_24" />
    </LinearLayout>

</LinearLayout>
